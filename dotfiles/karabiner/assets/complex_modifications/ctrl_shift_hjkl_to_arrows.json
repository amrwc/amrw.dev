{
    "title": "ctrl_shift_hjkl_to_arrows",
    "rules": [
        {
            "description": "`left_control` + `left_shift` + [hjkl] -> arrow keys",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "name": "left_control pressed",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": ["left_shift"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "name": "left_control pressed",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": ["left_shift"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "name": "left_control pressed",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": ["left_shift"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "name": "left_control pressed",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": ["left_shift"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "left_control",
                        "modifiers": {
                            "mandatory": ["left_shift"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "left_control pressed",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "left_control pressed",
                                "value": 0
                            }
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
