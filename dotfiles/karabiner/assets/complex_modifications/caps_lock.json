{
    "title": "Caps Lock",
    "rules": [
        {
            "description": "Caps Lock + n => return_or_enter",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "name": "caps_lock pressed",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "n",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "return_or_enter"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "caps_lock pressed",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "caps_lock pressed",
                                "value": 0
                            }
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Caps Lock + [hjkl] => arrow keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "caps_lock pressed",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "caps_lock pressed",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "caps_lock pressed",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "caps_lock pressed",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "caps_lock pressed",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "caps_lock pressed",
                                "value": 0
                            }
                        }
                    ]
                }
            ]
        },
        {
            "description": "Caps Lock + FN + [hjkl] => scroll vertically or horizontally",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": ["fn"]
                        }
                    },
                    "to": [
                        {
                            "mouse_key": {
                                "vertical_wheel": 40
                            }
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "caps_lock pressed",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": ["fn"]
                        }
                    },
                    "to": [
                        {
                            "mouse_key": {
                                "vertical_wheel": -40
                            }
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "caps_lock pressed",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": ["fn"]
                        }
                    },
                    "to": [
                        {
                            "mouse_key": {
                                "horizontal_wheel": 30
                            }
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "caps_lock pressed",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": ["fn"]
                        }
                    },
                    "to": [
                        {
                            "mouse_key": {
                                "horizontal_wheel": -30
                            }
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "caps_lock pressed",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "caps_lock pressed",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "caps_lock pressed",
                                "value": 0
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
