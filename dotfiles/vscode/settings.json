{
    /**
     * Frequently changed
     */
    // "workbench.colorTheme": "Quiet Light",
    // "workbench.colorTheme": "Solarized Light",
    // "editor.fontSize": 14,
    "editor.fontSize": 16,
    // "editor.fontSize": 18,

    /**
     * General
     */
    "editor.detectIndentation": true,
    "editor.formatOnSave": false,
    "editor.hover.delay": 1500,
    "editor.minimap.enabled": false,
    "editor.renderIndentGuides": true,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": true,
    "extensions.ignoreRecommendations": false,
    "files.trimFinalNewlines": false,
    "files.trimTrailingWhitespace": false,
    "workbench.enableExperiments": false,
    "workbench.quickOpen.closeOnFocusLost": false,
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "none",
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "terminal.integrated.confirmOnExit": true,
    "window.newWindowDimensions": "maximized",
    "window.zoomLevel": 0,

    /**
     * Miscellaneous
     */
    "mssql.connections": [
        {
            "server": "localhost",
            "database": "",
            "authenticationType": "SqlLogin",
            "user": "sa",
            "password": "",
            "emptyPasswordInput": false,
            "savePassword": true
        }
    ],

    /**
     * Languages settings
     */
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.validate.enable": true,
    "files.associations": {
        "*.js": "javascript"
    },
    "[csharp]": {
        "editor.tabSize": 4
    },
    "[rust]": {
        "editor.tabSize": 4
    },
    "[latex]": {
        "editor.minimap.enabled": false
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false
    },
    "[shellscript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.detectIndentation": true
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    /**
     * Extension: Prettier
     * https://marketplace.visualstudio.com/items?itemName=esbenp.prettier-vscode
     */
    "prettier.singleQuote": true,
    "prettier.trailingComma": "es5",

    /**
     * Extension: Live Server
     * https://marketplace.visualstudio.com/items?itemName=ritwickdey.LiveServer
     */
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.donotVerifyTags": true,

    /**
     * Extension: GitLens
     * https://marketplace.visualstudio.com/items?itemName=eamodio.gitlens
     */
    "gitlens.defaultDateFormat": "D MMMM YYYY h:mma",
    "gitlens.menus": {
        "editor": {
            "blame": true,
            "clipboard": true,
            "compare": true,
            "details": true,
            "history": true,
            "remote": true
        },
        "editorGroup": {
            "blame": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "editorTab": {
            "compare": true,
            "history": true,
            "remote": true
        },
        "explorer": {
            "compare": true,
            "history": true,
            "remote": true
        }
    },

    /**
     * Extension: TODO Highlight
     * https://marketplace.visualstudio.com/items?itemName=wayou.vscode-todo-highlight
     */
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "white",
            "backgroundColor": "#ff0000",
            "overviewRulerColor": "grey",
            "isWholeLine": false
        },
        {
            "text": "TODOURGENT:",
            "color": "white",
            "backgroundColor": "#ff0000",
            "overviewRulerColor": "grey",
            "isWholeLine": true
        },
        {
            "text": "NOTE:",
            "color": "white",
            "backgroundColor": "#8888ff",
            "overviewRulerColor": "grey"
        },
        {
            "text": "DEBUG:",
            "color": "white",
            "backgroundColor": "orange",
            "overviewRulerColor": "grey"
        }
    ],

    /**
     * Extension: Spell Right
     * https://marketplace.visualstudio.com/items?itemName=ban.spellright
     */
    "spellright.groupDictionaries": false,

    /**
     * Extension: LaTeX Workshop
     * https://marketplace.visualstudio.com/items?itemName=James-Yu.latex-workshop
     * https://github.com/James-Yu/LaTeX-Workshop
     */
    "latex-workshop.message.update.show": false,
    // "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.external.build.command": "make", // NOTE: This overrides the recipes
    "latex-workshop.latex.external.build.args": [],
    "latex-workshop.latex.recipe.default": "first",
    "latex-workshop.latex.outDir": "%DIR%/../output",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.recipes": [
        {
            "name": "pdflatex",
            "tools": ["pdflatex"]
        },
        {
            "name": "pdflatex biber",
            "tools": ["pdflatex", "biber", "pdflatex", "pdflatex"]
        },
        {
            "name": "xelatex",
            "tools": ["xelatex"]
        },
        {
            "name": "biber",
            "tools": ["biber"]
        },
        {
            "name": "xelatex biber",
            "tools": ["xelatex", "biber", "xelatex", "xelatex"]
        },
        {
            "name": "xelatex minted",
            "tools": ["xelatex minted"]
        },
        {
            "name": "xelatex biber minted",
            "tools": ["xelatex minted", "biber", "xelatex minted", "xelatex minted"]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": ["%DOC%"]
        },
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": ["%DOC%"]
        },
        {
            "name": "xelatex minted",
            "command": "xelatex",
            "args": ["--shell-escape", "%DOC%"]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": ["%DOC%"]
        }
    ],

    /**
     * Visual Studio IntelliCode
     * https://marketplace.visualstudio.com/items?itemName=VisualStudioExptTeam.vscodeintellicode
     */
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    /**
     * markdownlint
     * https://marketplace.visualstudio.com/items?itemName=DavidAnson.vscode-markdownlint
     */
    "markdownlint.run": "onSave"
}
